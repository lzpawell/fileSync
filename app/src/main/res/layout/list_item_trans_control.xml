<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/file"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_file_name"
            android:gravity="left"
            android:text="123"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:maxLines="1"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="current"
                android:textColor="@color/colorTextTips"
                android:scrollHorizontally="true"
                android:maxLines="1"/>


            <TextView
                android:id="@+id/v_line"
                android:layout_width="wrap_content"
                android:layout_height="16sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="/"
                android:textColor="@color/colorlightGray"/>

            <TextView
                android:id="@+id/tv_total_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="total"
                android:textColor="@color/colorTextTips"
                android:scrollHorizontally="true"
                android:maxLines="1"/>


            <TextView
                android:id="@+id/tv_current_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorlightGray"
                android:text=""
                android:textSize="12sp"/>

        </LinearLayout>


    </LinearLayout>


    <view
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_gravity="center">


        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ProgressBar
                android:id="@+id/progress_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


            <ImageView
                android:id="@+id/v_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/trans_stop"/>

        </FrameLayout>



    </LinearLayout>

</LinearLayout>